<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.zzw.generalaffairs.MainActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/homepage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivHomepage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:src="@drawable/homepage" />

            <TextView
                android:id="@+id/tvHomepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="12sp"
                android:textColor="#45daf5" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#45daf5"/>
        <LinearLayout
            android:id="@+id/service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivservice"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:background="#00000000"
                android:src="@drawable/service" />

            <TextView
                android:id="@+id/tvservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务"
                android:textSize="12sp"
                android:textColor="#45daf5" />
        </LinearLayout>
<LinearLayout
    android:layout_width="2dp"
    android:layout_height="30dp"
    android:layout_gravity="center_vertical"
    android:background="#45daf5"/>
        <LinearLayout
            android:id="@+id/myinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivMyinfo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:background="#00000000"
                android:src="@drawable/myinfo" />

            <TextView
                android:id="@+id/tvMyinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="#45daf5" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
